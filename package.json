{
  "name": "ts-node-test-register",
  "version": "4.0.0",
  "description": "Load from `test/tsconfig.json` with ts-node.",
  "homepage": "https://github.com/azu/ts-node-test-register",
  "bugs": {
    "url": "https://github.com/azu/ts-node-test-register/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/ts-node-test-register.js",
  "types": "lib/ts-node-test-register.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/ts-node-test-register.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.ts\"",
    "test:example": "(cd example && yarn && yarn test)",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "watch": "tsc -p . --watch"
  },
  "dependencies": {
    "read-pkg": "^3.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.3.5",
    "@types/read-pkg": "^3.0.0",
    "cross-env": "^5.2.0",
    "husky": "^1.0.0",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.13.5",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.0"
  },
  "peerDependencies": {
    "ts-node": "^7.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4
  }
}
